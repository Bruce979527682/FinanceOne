@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "首页";
}

<style>
    .div-body {
        width: 100%;
        margin: 0 auto;
        height: 100%;
    }

    .div-main {
        height: 100%;
        min-height: 780px;
        margin: 70px 15px 15px 15px;
    }

    .div-date {
        float: left;
        width: 165px;
        height: 330px;
        display: inline-block;
        margin-top: 10px;
    }

    .div-content {
        float: left;
        width: calc(100% - 415px);
        height: 100%;
        display: inline-block;
    }

    .p-date {
        text-align: center;
    }

    .tfoot-count {
        background-color: bisque;
    }

    .div-btnbox {
        width: 100%;
        height: 40px;
    }

        .div-btnbox > div {
            width: 300px;
            height: 35px;
            margin: 0 auto;
        }

    .div-center {
        margin: 0 auto !important;
    }
</style>

<div id="main" class="div-body">
    <div class="div-main">
        <div id="divDate" class="div-date">
            <ul class="layui-timeline">
                <li class="layui-timeline-item">
                    <i class="layui-icon layui-timeline-axis layui-icon-circle"></i>
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">更早</h3>
                        @*<p>
                                备注信息
                            </p>*@
                    </div>
                </li>
                <li class="layui-timeline-item">
                    <i class="layui-icon layui-timeline-axis layui-icon-circle"></i>
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title" @@click="switchDate('2018-12-02')">2018年12月02日</h3>
                        @*<p>
                                备注信息
                            </p>*@
                    </div>
                </li>                
            </ul>
        </div>
        <div id="divContent" class="div-content">
            <div class="div-btnbox">
                <div>
                    <div class="layui-btn-group">
                        <button class="layui-btn layui-btn-primary layui-btn-lg">
                            <i class="layui-icon">&#xe642;</i>
                        </button>
                        <button class="layui-btn layui-btn-primary layui-btn-lg">
                            <i class="layui-icon">&#xe640;</i>
                        </button>
                    </div>
                </div>
            </div>

            <table class="layui-table">
                <colgroup>
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                </colgroup>
                <thead>
                    @*<tr>
                            <th colspan="6"><p id="pdate" class="p-date"></p></th>
                        </tr>*@
                    <tr>
                        <th>大类名称</th>
                        <th>名称</th>
                        <th>金额</th>
                        <th>数量</th>
                        <th>时间</th>
                        <th>备注</th>
                        <th>总金额</th>
                        <th>类型</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="record in recordList">
                        <td>{{convertType(record.category)}}</td>
                        <td>{{record.name}}</td>
                        <td>{{record.money}}</td>
                        <td>{{record.number}}</td>
                        <td>{{convertTime(record.addTime)}}</td>
                        <td>{{record.remark}}</td>
                        <td>{{record.totalMoney}}</td>
                        <td>{{record.type == 1? "资产":"负债"}}</td>
                    </tr>
                </tbody>
                <tfoot class="tfoot-count" v-show="recordList.length > 0">
                    <tr>
                        <td></td>
                        <td></td>
                        <td>总计</td>
                        <td>资产总计</td>
                        <td>负债总计</td>
                        <td>资产净值</td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div id="divInput" style="float:right;width:240px;">
            <div class="image content" style="height:500px;">
                <div class="ui form">
                    <div class="field">
                        <div class="twelve wide field div-center">
                            <button class="layui-btn layui-btn-primary layui-btn-lg" @@click="openWindow()">
                                <i class="layui-icon">&#xe654;</i>
                            </button>
                        </div>
                    </div>
                    <div class="field">
                        <div class="twelve wide field div-center">
                            <label>类别</label>
                            <select class="layui-select" v-model="record.category">
                                <option>请选择</option>
                                <option v-for="type in typeList" :value="type.id">{{type.name}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <label>名称</label>
                            <input type="text" placeholder="名称" v-model="record.name">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <label>金额</label>
                            <input type="text" placeholder="金额" v-model="record.money">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <label>数量</label>
                            <input type="number" placeholder="数量" v-model="record.number">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <label>日期</label>
                            <input type="date" placeholder="日期" v-model="record.addTime">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <label>备注</label>
                            <input type="text" placeholder="备注" v-model="record.remark">
                        </div>
                    </div>
                    <div class="field">
                        <div class="twelve wide field div-center">
                            <label>类型</label>
                            <select class="layui-select" v-model="record.type">
                                <option value="1">资产</option>
                                <option value="2">负债</option>
                            </select>
                        </div>
                    </div>
                    <div class="fields">
                        <div class="twelve wide field div-center">
                            <button class="btn layui-btn layui-btn-primary" @@click="addRecord()">保存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="div-type" class="ui modal" style="width:600px;">
        <i class="close icon"></i>
        <div class="header">
            新增类别
        </div>
        <div class="image content" style="height:200px;">
            <div class="ui form" style="width:100%;">
                <div class="fields">
                    <div class="twelve wide field div-center">
                        <label>名称</label>
                        <input type="text" placeholder="名称" v-model="dataType.name">
                    </div>
                </div>
                <div class="fields">
                    <div class="twelve wide field div-center">
                        <label>备注</label>
                        <input type="text" placeholder="备注" v-model="dataType.remark">
                    </div>
                </div>
            </div>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                取消
            </div>
            <div class="ui positive icon button" v-on:click="addType()">
                保存
            </div>
        </div>
    </div>
</div>
<div style="clear:both;"></div>

<script>
    var app = new Vue({
        el: '#main',
        data: {
            vueIsComplete: false,
            datalist: [],
            dataType: {
                name: '',
                remark: ''
            },
            record: {
                category: '',
                type: '',
                name: '',
                money: '',
                number: '',
                addTime: '',
                remark: '',
            },
            typeList: [],
            recordList: []
        },
        methods: {
            openWindow: function () {
                $('#div-type').modal('show');
            },
            addType: function () {
                $.ajax({
                    type: 'POST',
                    url: 'AddRecordType',
                    data: this.dataType,
                    dataType: 'json',
                    success: function (data) {
                        if (data.code == 1) {
                            QueryData();
                            layer.msg(data.msg);
                        } else {

                            layer.msg(data.msg);
                        }
                    },
                    error: function (data) {

                    }
                });
            },
            addRecord: function () {
                $.ajax({
                    type: 'POST',
                    url: 'AddRecord',
                    data: this.record,
                    dataType: 'json',
                    success: function (data) {
                        if (data.code == 1) {
                            QueryData();
                            layer.msg(data.msg);
                        } else {

                            layer.msg(data.msg);
                        }
                    },
                    error: function (data) {

                    }
                });
            },
            convertType: function (id) {
                var item = $.grep(this.typeList, function (data) {
                    return data.id === id;
                });
                if (item != null && item != undefined) {
                    return item[0].name;
                }
            },
            convertTime: function (time) {
                if (time != undefined && time !== '') {
                    return time.substr(0, 10);
                }
            },
            switchDate: function (str) {
                if (str != undefined && str !== '') {
                    queryPara.dateStr = str;
                    QueryData();
                }
            }
        },
        computed: {


        },
        watch: {

        },
        created: function () {
            this.vueIsComplete = true;
            QueryData();
        }
    })

    function OpenAdd() {
        layer.open({
            type: 1,
            content: '传入任意的文本或html'
        });
    }

    function Tip() {
        layer.open({
            content: 'test',
            btn: ['确定', '取消'],
            yes: function (index, layero) {
                //按钮【按钮一】的回调
            },
            no: function () {


            },
            cancel: function () {
                //右上角关闭回调
            }
        });
    }
    $('.ui.sticky').sticky({
        context: '#example1'
    });
    var myDate = new Date();
    var dd = myDate.toLocaleDateString();
    var queryPara = {
        pageIndex: 1,
        pageSize: 20,
        dateStr: dd
    }

    function QueryData() {
        $.ajax({
            type: 'POST',
            url: 'GetTypeList',
            dataType: 'json',
            data: queryPara,
            success: function (data) {
                if (data.code == 1) {
                    app.typeList = data.list;
                }
            },
            error: function (data) {

            }
        });

        $.ajax({
            type: 'POST',
            url: 'GetRecordList',
            dataType: 'json',
            data: queryPara,
            success: function (data) {
                if (data.code == 1) {
                    app.recordList = data.list;
                }
            },
            error: function (data) {

            }
        });

    }
</script>